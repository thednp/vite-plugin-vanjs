{
   // https://janessagarrow.com/blog/typescript-and-esbuild/
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "rootDir": "./",
    "baseUrl": "./",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolvePackageJsonImports": true,
    "useDefineForClassFields": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "noEmit": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "vite-plugin-vanjs",
    "paths": {
      "~/*": ["./src/*"],
      // "@vanjs/h": ["./src/jsx/index.ts", "./dist/jsx/index.mjs"],
      // "@vanjs/loader": ["./src/loader/index.ts", "./dist/loader/index.mjs"],
      // "@vanjs/setup": ["setup/index.mjs", "./dist/setup/index.mjs"],
      // "@vanjs/van": ["./src/van/index.ts", "./dist/van/index.mjs"],
      // "@vanjs/vanx": ["./src/vanx/index.ts", "./dist/vanx/index.mjs"]
    }
  },
  "include": ["./src/**/*", "./jsx/**/*.d.ts", "setup/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": [
    "node_modules", "experiments", "coverage", //"dist", 
    // "jsx/**/*.js", "src/**/*.jsx"
  ],
}
